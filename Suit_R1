  rainbowEffect(lowerLeds, NUM_LOWER_LEDS);  // Rainbow effect for lower body
  delay(15000); // for 15 sec t = 155 - 163 s
  setColor(CRGB::Green,6000); // for 6 sec..  t = 164 - 169
  blackout(10000);  // for 10 sec.. t = 170 - 179 sec...

   lightUpLower(CRGB::Blue);
   delay(1000);
  blackout(10);            // t = 180
  lightUpUpper(CRGB::Blue); 
  delay(1000); 
  blackout(10);           // t = 181
  lightUpLower(CRGB::Blue);
  delay(1000);
  blackout(10);           //  t = 182

  lightUpUpper(CRGB::Blue); 
  delay(1000); 
  blackout(10);           // t = 183
  lightUpLower(CRGB::Blue);
  delay(1000);
  blackout(10);           //  t = 184
  
  lightUpUpper(CRGB::Blue); 
  delay(1000); 
  blackout(10);           // t = 185
  lightUpLower(CRGB::Blue);
  delay(1000);
  blackout(10);           //  t = 186
  
  lightUpUpper(CRGB::Blue); 
  delay(1000); 
  blackout(10);           // t = 187
  lightUpLower(CRGB::Blue);
  delay(1000);
  blackout(10);           //  t = 188
  setColor(CRGB::Blue,2000); // t = 189 - 190
  blackout(11000);   // for 11 sec... t = 191 - 201 s

  setColor(CRGB::Aqua,23000); // for 23 sec t = 202 - 224 s
  blackout(1000);  // t = 225
  setColor(CRGB::Aqua,4000);   // // for 4 sec t = 226 - 229 s
  blackout(5000); // for 5 sec t = 230 - 234 s
  
  // RGB trail effect for 7 sec at t = 235 - 241
   specialEffect(7000);

     blackout(1000);   // t = 242
   setColor(CRGB::Yellow,800);  // t = 243
    blackout(200);
   blackout(1000);   // t = 244  
